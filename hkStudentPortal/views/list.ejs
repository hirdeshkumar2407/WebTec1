    <% include partials/menu %>
 
     
    <div class=" bg-3 text-center">    
        <h2 class="text-center" style="background-color:#999c9f;color:rgb(255,255,255);">Student List</h2>
        <div class="row">
          <table class='table table-striped table-responsive-md btm-table'>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>RegID</th>
                    <th>Section</th>
                    <th>&nbsp;</th>
                    <th>&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                <% student.forEach(function(student){ %>
                    <tr>
                        <td><%=student.name %></td>
                        <td><%=student.regid %></td>
                        <td><%=student.sec %></td>
                        <td>
                            <form action='updateform/<%=student._id %>' method="POST">
                                <button type="submit">Update</button>
                            </form>
                        </td>
                        <td>
                        <form action='<%=student._id %>/delete' method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>                   
                    </tr>
                 <% });  %>   
            </tbody>
        </table>
  
  
        </div>
      </div>
